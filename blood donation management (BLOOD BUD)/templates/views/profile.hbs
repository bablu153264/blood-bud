                        <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control"  value="{{email}}"></div>
                        <div class="col-md-12"><label class="labels">PhoneNumber</label><input type="text" class="form-control" value="{{phone}}"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Pincode </label><input type="text" class="form-control" value="{{pincode}}"> </div>
                        <div class="col-md-6"><label class="labels">City</label><input type="text" class="form-control" value="{{city}}"> </div>
                        <div class="col-md-6"><label class="labels">State</label><input type="text" class="form-control"  value="{{state}}"></div>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                   </div>
            </div>
        </div>
